{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {"source" : "**/*.@(eot|otf|ttf|ttc|woff|css)",
      "headers" : [
          {
            "key" : "Access-Control-Allow-Origin",
            "value" : "max-age=604800"
          }
        ]
      }, 
      {"source" : "**/*.@(jpg|jpeg|gif|png)",
      "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=604800"
          }
        ]
      },
      {"source" : "404.html",
      "headers" : [
          {"key" : "Cache-Control",
            "value" : "max-age=604800"
          }
        ]
      },
      { "source":"/sw.js", 
        "headers": [
          {
            "key": "Cache-Control", 
            "value": "no-cache"
          }
        ] 
      }
    ]
  }
}